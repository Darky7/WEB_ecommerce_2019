{% block head %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="{{ asset('assets/css/style_welcome.css') }}" />
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="col-md border-left pl-md-4 mt-4 mt-md-0">
        <div id="logbox">
            <form id="signup" method="post" action="{{ path('app_login') }}">
                <h1>Connexion</h1>
                <input name="email" type="email" placeholder="entrer votre email" class="input pass"/>
                <input name="password" type="password" placeholder="entrer votre mot de passe" required="required" class="input pass"/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <input type="checkbox" id="remember_me" name="_remember_me" style="margin-left: 40px" />
                    <label for="remember_me" style="margin-left: 40px">Se souvenir</label>
                </div>

                <input type="submit" value="Se connecter" class="inputButton"/>
            </form>
            <div class="text-center">
                <a href="{{ path('app_register') }}" id="">Nouveau compte</a>
            </div>
        </div>
    </div>
</form>
{% endblock %}

{% block javascripts %}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}
